<?xml version="1.0" encoding="UTF-8"?>
<dsl-extension kind="vcs" type="perforce" generateDslJar="true">
  <class name="PerforceVcsRoot">
    <description>
      Perforce [VCS root](https://confluence.jetbrains.com/display/TCDL/Perforce)
    </description>
  </class>
  <params>
    <param name="port">
      <description>
        A Perforce server address in the "host:port" format
      </description>
    </param>
    <param name="use-client" dslName="mode" type="compound">
      <description>
        A mode of Perforce connection
      </description>
      <option name="stream" value="stream">
        <description>
          Connect to [Perforce stream](https://confluence.jetbrains.com/display/TCDL/Perforce#Perforce-perforceStreamOptionDescription) with specified name
        </description>
        <param name="stream" dslName="streamName">
          <description>
            A Perforce stream name
          </description>
        </param>
        <param name="use-dag" dslName="enableFeatureBranches" type="boolean" trueValue="true" falseValue="">
          <description>
            Enables support for branches in Perforce
          </description>
        </param>
        <param name="teamcity:branchSpec" dslName="branchSpec">
          <description>
            [Branch specification](https://confluence.jetbrains.com/display/TCDL/Working+with+Feature+Branches#WorkingwithFeatureBranches-branchSpec) to use
          </description>
        </param>
      </option>
      <option name="client" value="true">
        <description>
          Connecto to Perforce using the specified [client name](https://confluence.jetbrains.com/display/TCDL/Perforce#Perforce-perforceClientOptionDescription)
        </description>
        <param name="client" dslName="clientName">
          <description>
            A Perforce client name to use
          </description>
        </param>
      </option>
      <option name="clientMapping" value="false">
        <description>
          Connect to Perforce using the specified [client mapping](https://confluence.jetbrains.com/display/TCDL/Perforce#Perforce-perforceClientMappingOptionDescription)
        </description>
        <param name="client-mapping" dslName="mapping">
          <description>
            A [client mapping](https://confluence.jetbrains.com/display/TCDL/Perforce#Perforce-perforceClientMappingOptionDescription) to use
          </description>
        </param>
      </option>
    </param>
    <param name="user" dslName="userName">
      <description>
        A username for Perforce connection
      </description>
    </param>
    <param name="secure:passwd" dslName="password">
      <description>
        A password for Perforce connection
      </description>
    </param>
    <param name="use-login" dslName="useTicketBasedAuth" type="boolean" trueValue="true" falseValue="">
      <description>
        Whether a ticked-based authentication should be used
      </description>
    </param>
    <param name="workspace-options" dslName="workspaceOptions">
      <description>
        [Settings](https://confluence.jetbrains.com/display/TCDL/Perforce#Perforce-perforceWorkspaceOptions)
        for the [p4 client](http://www.perforce.com/perforce/doc.current/manuals/cmdref/p4_client.html#p4_client.form_fields) command.
      </description>
    </param>
    <param name="use-p4-clean" dslName="runP4Clean" type="boolean" trueValue="true" falseValue="">
      <description>
        Whether TeamCity should run 'p4 clean' command before the build
      </description>
    </param>
    <param name="use-sync-p" dslName="skipHaveListUpdate">
      <description>
        Whether TeamCity should track files on the Perforce server on sync
      </description>
    </param>
    <param name="extra-sync-options" dslName="syncOptions">
      <description>
        Additional options for the [p4 sync](http://www.perforce.com/perforce/doc.current/manuals/cmdref/p4_sync.html) command
      </description>
    </param>
    <param name="p4-exe" dslName="p4Path">
      <description>
        A path to p4 executable
      </description>
    </param>
    <param name="label-revision" dslName="checkoutRevision">
      <description>
        [Custom](https://confluence.jetbrains.com/display/TCDL/Perforce#Perforce-perforceLabelToCheckout) Perforce revision to checkout
      </description>
    </param>
    <param name="charset" dslName="charsetName">
      <description>
        A charset to use on the client machine
      </description>
    </param>
    <param name="detect-utf-16" dslName="supportUtf16" type="boolean" trueValue="true" falseValue="">
      <description>
        Enables support for files with UTF-16 encoding
      </description>
    </param>
  </params>
</dsl-extension>